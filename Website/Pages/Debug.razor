@attribute [Route(PageRoute.Debug)]

<IconButton SmallSize="true" ButtonText="Show Loading" OnClickCallback="Callback"></IconButton>
<IconButton SmallSize="true" ButtonText="Hide Loading" OnClickCallback="Callback2"></IconButton>

@code {

    private async Task Callback()
    {
         


        var alertData = new
        {
            showConfirmButton = false,
            width = "280px",
            padding = "1px",
            allowOutsideClick = false,
            allowEscapeKey = false,
            stopKeydownPropagation = true,
            keydownListenerCapture = true,
            html = "<img src=\"images/loading-animation-progress.gif\" />"

        };

        _jsRuntime.ShowAlert(alertData);

    }
    private void Callback2()
    {
        _jsRuntime.InvokeVoidAsync(JS.Swal_showLoading);

    }

}
